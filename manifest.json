{
  "manifest_version": 2,
  "name": "RECAP",
  "author": "Free Law Project and the Center for Information Technology and Policy at Princeton",
  "description": "RECAP improves the experience of using PACER, the online public access system for the U.S. federal courts.",
  "homepage_url": "https://www.recapthelaw.org",
  "version": "0.8.6",
  "icons": {
    "16": "assets/images/icon-16.png",
    "19": "assets/images/icon-19.png",
    "32": "assets/images/icon-32.png",
    "38": "assets/images/icon-38.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  },
  "permissions": [
    "*://*.recapextension.org/",
    "*://recapextension.org/",
    "*://*.uscourts.gov/",
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "utils.js",
      "notifier.js",
      "toolbar_button.js",
      "pacer.js",
      "recap.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*.uscourts.gov/*"],
    "include_globs": ["*://ecf.*", "*://ecf-train.*", "*://pacer.*"],
    "css": ["style.css"],
    "js": [
      "assets/js/jquery.min.js",
      "utils.js",
      "notifier.js",
      "toolbar_button.js",
      "pacer.js",
      "recap.js",
      "content_delegate.js",
      "content.js"
    ],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": {
      "19": "assets/images/grey-19.png",
      "38": "assets/images/grey-38.png"
    },
    "default_title": "RECAP: Not at a PACER site",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "assets/images/*.png",
    "assets/js/*.js"
  ]
}
